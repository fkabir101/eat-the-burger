<div class="row">
  <div class="col-4">
    <form>
      {{> section-title title="Create Burger"}}
      <div class="form-group">
        <input class="form-control" type="text" id="burger-input" placeholder="Create burger here"/>
        <button class="mt-1 btn btn-block btn-success" id="submit-btn">Add Burger</button>
      </div>
    </form>
  </div>
  <div class="col-4">
    {{> section-title title="Burgers to eat"}}
    <ul class="list-group">
    {{#each burgerList}}
      {{#unless eaten}}
        {{> burgers/burger status="Not Eaten"}}
      {{/unless}}
    {{/each}}
    </ul>
  </div>
  <div class="col-4">
    {{> section-title title="Eaten Burgers"}}
    <ul class="list-group">
      {{#each burgerList}}
        {{#if eaten}}
          {{> burgers/burger status="Eaten"}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>